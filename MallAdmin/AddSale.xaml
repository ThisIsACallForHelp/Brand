<UserControl x:Class="MallAdmin.AddSale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MallAdmin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="Yellow">
        <Border BorderBrush="Black" BorderThickness="1" Height="314" Width="330" HorizontalAlignment="Center" Canvas.Top="51" VerticalAlignment="Top" Canvas.Left="208" CornerRadius="20">
            <StackPanel>
                <Label Content="Enter Product's  ID" FontSize="20px" Margin="0,50,0,0"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="ProductID" ></TextBox>
                <Label Content="Enter The Percentage" FontSize="20px" Margin="0,50,0,0"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="Percentage"></TextBox>
                <Button Height="40px" Width="160" Content="Submit" FontSize="30" Margin="0,30,20,0" Click="btn_AddSale"/>
            </StackPanel>
        </Border>
    </Canvas>
</UserControl>
