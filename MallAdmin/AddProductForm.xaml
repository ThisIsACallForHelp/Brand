<UserControl x:Class="MallAdmin.AddProductForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MallAdmin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="Yellow" Margin="0,0,0,-41">
        <Border BorderBrush="Black" BorderThickness="1" Height="481" Width="315" Canvas.Left="219" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top" CornerRadius="20">
            <StackPanel Margin="0,0,0,-1">
                <Label Content="Enter Product's  Name" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="ProductName"></TextBox>
                <Label Content="Enter Your Product's Price" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="ProductPrice"></TextBox>
                <Label Content="Enter Product ID" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="ProductID"></TextBox>
                <Label Content="Enter Brand ID" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="BrandID"></TextBox>
                <Label Content="Enter Store ID" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="StoreID"></TextBox>
                <Label Content="Enter Percentage" FontSize="15px"/>
                <TextBox Background="#FFC8C8C8" Margin="5" Height="20px" x:Name="Percentage"></TextBox>
                <Button Content="Upload Image" Click="UploadImage_Click" Width="150" Height="30"/>
                <Image x:Name="ProductIMG" Width="20" Height="20" Stretch="Uniform" Margin="10"/>
                <Button Height="30" Width="150px" Content="Submit" FontSize="22" Click="btn_AddProduct" />
            </StackPanel>

        </Border>

    </Canvas>
</UserControl>
