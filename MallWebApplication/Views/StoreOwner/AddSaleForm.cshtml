
@{
    ViewData["Title"] = "AddSaleForm";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/GUI/SignUpStyle.css">
    <title>Document</title>
</head>
<body>
    <div class="Wrapper" style="height: 420px;">
        <div style="text-align: center; width: 500px; border-bottom: 5px solid black; height: 100px; text-justify: center;">
            <h1 style="font-size: 55px;"> Sale Registration </h1>
        </div>
        <form style="display: block;" action="http://localhost:5041/StoreOwner/AddSale"
              method="post" enctype="multipart/form-data">
            <div class="error" id="ErrorDiv">
                <h1> Please, check the form again </h1>
            </div>
            <label> Product ID </label>
            <input type="number" placeholder="Name" required name="ProductID">
            <br>
            <label> Percentage </label>
            <input type="number" placeholder="Name" required name="Percentage">
            <br>
            <div style="display: flex; justify-content: center; width: 450px; height: 100px; margin: 0px;">
                <button class="Clear" onclick="window.location.href='@Url.Action("StoreOwnerView", "StoreOwner")'"> Back </button>
                <button type="submit" class="Submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>

