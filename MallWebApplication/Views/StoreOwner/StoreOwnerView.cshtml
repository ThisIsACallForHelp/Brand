@using Models;
@model StoreOwnerViewModel
@{
    ViewData["Title"] = "StoreOwnerView";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/GUI/StoreOwnerStyle.css">
    <title>Catalog</title>
</head>
<body style="height: 2000px;">
    <div style="display: flex; width: 100%; height:1000px;">
        <div class="Holder" style="margin-left: 250px;">
            <div class="Options">
                <div style="width: 200px; height: 50px;">
                    <button class="OptionButton" style="margin-top: 50px;" onclick="window.location.href='@Url.Action("StoreOwnerView", "StoreOwner", new{OnSale = false})'"> All Products</button>
                </div>
                <div style="margin-top: 20px; width: 200px; height: 50px;">
                    <button class="OptionButton" style="margin-top: 50px;" onclick="window.location.href='@Url.Action("StoreOwnerView", "StoreOwner", new{OnSale = true})'"> On Sale</button>
                </div>
                <div style="margin-top: 20px; width: 200px; height: 50px;">
                    <button class="OptionButton" style="margin-top: 50px; background-color: #39FF14;" onclick="window.location.href='@Url.Action("AddProductForm", "StoreOwner")'"> Add a Product</button>
                </div>
                <div style="margin-top: 20px; width: 200px; height: 50px;">
                    <button class="OptionButton" style="margin-top: 50px; background-color: #39FF14;" onclick="window.location.href='@Url.Action("AddSaleForm", "StoreOwner")'"> Add a Sale</button>
                </div>
            </div>
            <div class="Items">
                @foreach (Product product in Model.Products)
                {
                    <div class="ImageTextHolder">
                        <img src="@product.ProductIMG" style="border-bottom:10px solid black; height: 220px; width: 300px; margin: 0px;">
                        <div style="display: flex; width: 300px;">
                            <form action="http://localhost:5041/StoreOwner/Delete"
                                  method="post" enctype="multipart/form-data" style="width:100%; height: 30px; background-color: red">
                                <input hidden name="OnSale"/>
                                <button value="@product.ID" type="submit" style="width: 50%;height: 30px; border: 1px solid red; background-color: red; cursor: pointer;" name="ProductID"> Delete </button>
                            </form>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</body>
</html>



