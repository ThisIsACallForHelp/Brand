@using Models;
@model ViewProduct;
@{
    ViewData["Title"] = "GetProduct";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<link rel="stylesheet" href="~/GUI/CatalogStyle.css" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="CatalogStyle.css">
    <title>Catalog</title>
</head>
<body style="height: 1000px">
    <div class="modal-inner" style="top: 40%; right:40%; position: calc(-50%, -50%); position: absolute">
        <div style="display: flex;">
            <div>
                <img src="@Model.Product.ProductIMG" style="width: 250px; height: 300px; margin-top: 10px; margin-bottom: 10px; margin-left: 5px;">
            </div>
            <form method="post" action="http://localhost:5041/User/AddProductToCart">
                <div style="display: block;font-size: 20px; justify-content: center;">
                    <h1 style="margin-left: 40px;"> @Model.Product.ProductName</h1>
                    <div style="display: flex; margin: 20px;">
                        <h2 style="align-content: flex-start;"> Price: </h2>
                        <h2 style="align-content: flex-end; margin-left:20px ;"> @Model.Product.ProductPrice</h2>
                    </div>
                    <div style="display: flex; margin: 30px;">
                        <h2 style="align-content: flex-start;"> Store: </h2>
                        <h2 style="align-content: flex-end; margin-left:40px ;"> @Model.StoreName</h2>
                    </div>

                    <label> How much of this product do you want?</label>
                    <input type="number" required name="Quantity" value="1" min="1" />
                    <input type="hidden" name="ProductID" value="@Model.Product.ID" />

                </div>
                <div style="display: flex;">
                    <button onclick="window.location.href='http://localhost:5041/User/GetCatalog'"> Close </button>
                    <button type="submit"> Add To My Cart </button>
                </div>
            </form>
            
        </div>
        
    </div>
</body>
</html>



